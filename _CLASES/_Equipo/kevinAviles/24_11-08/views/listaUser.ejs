        <h2>Dashboard</h2>
        <h2>Bienvenido:
          <% if (user) { %>
            <span class="badge bg-success"><%= user.name %></span>
            <span style="width: 100px;" class="badge bg-success"><img style="width: 100%;" src="/img/tmp/my-uploads/<%= user.avatar %> " alt=""></span>
          <% } %>
        </h2>
      </div>
      <div class="container">
        <div class="row">
            <div class="col-lg-12 shadow-lg p-3 mb-5">
    
              <div class="card border-primary">
                <div class="card-header bg-primary text-white">Lista de usuarios</div>
                
                <div class="card-body text-primary justify-content-around">
                  <table class="table">
                    <thead class="table-dark ">
                      <tr >
                        <th  scope="col">ID</th>
                        <th scope="col">User</th>
                        <th scope="col">Name</th>
                        <th scope="col">Emial</th>
                        <th scope="col">Ultima edicion</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                      </tr>
                    </thead>
                    
                    <% users.forEach(element => { %>
                    <tbody >
                        
                        <th class="text-primary scope="row"><%= element.id %> </th> 
                        <td class="text-primary"><%= element.user %> </td>
                        <td class="text-primary"><%= element.name %> </td>
                        <td class="text-primary"><%= element.email %> </td>
                        <td class="text-primary"><%= element.updatedAt %> </td>
                        <td><a class="btn btn-primary" href="/userEdit/<%= element.id %> " role="button">Editar</a></td>
                        <td><form action="/userDelete/<%= element.id %>?_method=delete " method="post">
                          <button class="btn btn-danger" type="submit">Eliminar</button>
                        </form></td>
                        
                    </tbody>
                    <% }) %>
                  </table>
